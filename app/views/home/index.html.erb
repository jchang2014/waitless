        <%= form_tag(restaurants_path, :method => "get", id:"search-form") do %>

          <table align=center class="search-form">
            <tr>
              <td>Restaurant Name/Food Type</td>
              <td>
                <%= text_field_tag :search, params[:search], placeholder: "Mexican, Philz Coffee, etc." %>
