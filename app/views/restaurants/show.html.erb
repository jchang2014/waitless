<div class="restaurant">
	<div class="restaurant-info">

    <img src="<%=result[:image]%>" class="restaurant-img"/>

    <table class="restaurant-data-table">
      <tr>
          <td><label>Restaurant</label></td>
          <td><%= @result[:name] %></td>
      </tr>
      <tr>
          <td><label>Location</label></td>
          <td>
              <% @result[:location].each do |place| %>
                <div><%= place %></div>
              <% end %>
          </td>
      </tr>
      <tr>
          <td><label>Rating</label></td>
          <td><img src="<%= @result[:rating] %>"></td>
      </tr>
      <tr>
        <td><label>Categories</label></td>
        <td><%= @result[:categories] %></td>
      </tr>
    </table>

	</div>

  <div class="restaurant-waitlist-info">
    <div class="show">
		  <table class="waitlist-table">
        <tr>
          <th><label>Name</label></th>
          <th><label>Party Size</label></th>
          <th><label>Signed at</label></th>
          <th><label>Wait Time</label></th>
        </tr>
          <% @reservations.each do |reservation| %>
            <tr>
              <td><%=reservation.user.name%></td>
              <td><%=reservation.number_in_party%></td>
              <td><%= reservation.created_at.strftime('%r')%></td>
              <td><%=reservation.timer%></td>
            </tr>
          <% end %>
      </table>
    </div>

    <div class="waitlist">
      <%= form_for [@restaurant, @new_reservation] do |f| %>
       <%= f.label :party_number %>
       <%= f.number_field :number_in_party %>
       <%= f.submit %>
      <% end %>
    </div>

  </div>

</div>
