<div class="restaurant-waitlist-info">
  <table class="waitlist-table">
    <tr>
      <th>Name</th>
      <th>Party Size</th>
      <th>Signed at</th>
      <th>Wait Time</th>
      <%if current_user && current_user.admin%><th>Remove Party</th><%end%>
    </tr>
      <% @reservations.each do |reservation| %>
        <%= render :partial => "reservations/show", locals: {reservation:reservation} %>
      <% end %>
  </table>
</div>
