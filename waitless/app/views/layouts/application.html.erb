<!DOCTYPE html>
<html>
<head>
  <title>WaitLess</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- Google maps scripts -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?libraries=places"></script>
  <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>

</head>
<body>

<nav>

  <div class="nav-title"><%= link_to "Waitless", root_path %></div>

  <div class="user-login">
    <% if current_user %>
      Welcome, <%= link_to "#{current_user.name}", users_path %> 
      <div><%= link_to "Signout", logout_path, method: 'delete' %></div>

    <% else %>
      <%= link_to "Login", session_path %>
       |
      <%= link_to "Signup", new_user_path %>
      <div>Welcome, User</div>
    

      <button class="nav-toggle">test</button>
      <div class="test-me">hi</div>
    <% end %>
  </div>

</nav>

<main>
	<%= yield %>
</main>

</body>
</html>
