 <% if @errors %>
 <div class="error">
  <p class="error_message">ERROR:
    <%= @errors %>
  </p>
</div>
<% end %>

<h1>Signup!</h1>

<%= form_for :user, url: users_path do |f| %>
<div>
  Name: <%= f.text_field :name %>
</div>
<div>
  Email: <%= f.text_field :email %>
</div>
<div>
  Password: <%= f.password_field :password %>
</div>
<div>
  Confirm Psswd: <%= f.password_field :password_confirmation %>
</div>
<%= f.submit "Submit" %>

<% end %>
